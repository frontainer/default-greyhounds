{
  "name": "default-greyhounds",
  "version": "0.0.1",
  "description": "",
  "main": "",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.5.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "browser-sync": "^2.14.0",
    "connect-history-api-fallback": "^1.3.0",
    "css-mqpacker": "^5.0.1",
    "csswring": "^5.1.0",
    "eslint": "^3.2.2",
    "eslint-loader": "^1.3.0",
    "espower-loader": "^1.0.0",
    "html-loader": "^0.4.3",
    "htmlhint": "^0.9.13",
    "imagemin-cli": "^3.0.0",
    "karma": "^1.1.2",
    "karma-mocha": "^1.1.1",
    "karma-notify-reporter": "^1.0.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "mocha": "^3.0.2",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "phantomjs-prebuilt": "^2.1.4",
    "postcss-cli": "^2.5.2",
    "power-assert": "^1.2.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.8.2",
    "sinon": "^1.17.3",
    "spritesmith-cli": "^1.1.2",
    "sync-dir": "^1.1.0",
    "webpack": "^1.12.13",
    "webpack-espower-loader": "^1.0.1"
  },
  "config": {
    "dest": "public",
    "imgsrc": "src/images/**/*",
    "imgdir": "src/images",
    "viewsrc": "src/view/*.pug",
    "sasssrc": "src/sass"
  },
  "scripts": {
    "start": "npm run watch",
    "webpack": "webpack --config ./config/webpack.config.js",
    "clean": "rimraf $npm_package_config_dest",
    "imagemin": "imagemin $npm_package_config_imgsrc --out-dir=$npm_package_config_dest/assets/images",
    "pug": "pug $npm_package_config_viewsrc -o $npm_package_config_dest -P",
    "htmlhint": "htmlhint $npm_package_config_dest/**/*.html",
    "sprite": "spritesmith --rc ./config/sprite.config.js",
    "sasslint": "sass-lint -v",
    "sass": "node-sass $npm_package_config_sasssrc --output $npm_package_config_dest/assets/css --source-map $npm_package_config_dest/assets/css",
    "postcss": "postcss -c ./config/postcss.config.js -r $npm_package_config_dest/assets/css/**/*.css -m",
    "build:html": "npm run pug && npm run htmlhint",
    "build:copy": "sync-dir",
    "build:script": "npm run webpack",
    "build:image": "npm run imagemin",
    "build:sass": "run-s sasslint sass postcss",
    "server": "browser-sync start --config ./config/server.config.js",
    "prebuild": "run-s clean sprite",
    "test": "karma start --single-run --no-auto-watch",
    "build": "run-p build:*",
    "watch": "run-p watch:* server",
    "watch:script": "npm run webpack -- -w",
    "watch:sass": "nodemon -q -w $npm_package_config_sasssrc -e scss -x npm run build:sass",
    "watch:image": "nodemon -q -w $npm_package_config_imgdir -e gif,jpg,png -x npm run build:image",
    "watch:htmlhint": "nodemon -q -w $npm_package_config_dest -e html -x npm run htmlhint",
    "watch:copy": "sync-dir -w",
    "watch:html": "npm run pug -- -w",
    "watch:test": "npm run test -- --no-single-run --auto-watch",
    "preproduction": "npm run prebuild",
    "production": "run-p production:*",
    "production:html": "npm run build:html",
    "production:copy": "run-p build:copy",
    "production:script": "webpack -p --config ./config/webpack.config.production.js",
    "production:image": "npm run build:image",
    "production:sass": "node-sass $npm_package_config_sasssrc --output $npm_package_config_dest/assets/css"
  },
  "sync": {
    "src/lib/**/*": "$npm_package_config_dest/assets/lib"
  },
  "author": "frontainer",
  "license": "MIT",
  "private": true
}
